<h4>go2rtc <small>{{ _('Version') }} {{ plugin_go2rtc_plugin_version }}</small></h4>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Server URL') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settingsViewModel.settings.plugins.go2rtc.server_url" placeholder="http://<ip>:1984">
        </div>
    </div>
    <h4>{{ _('Saved Streams') }}</h4>
    <div class="well" data-bind='foreach: streams.items'>
        <div class="control-group">
            <label class="control-label"><span data-bind="text: key"></span></label>
            <div class="controls">
                <div class="span10">
                    <input type="text" class="input-block-level" data-bind="value: value" placeholder="{{ _('Stream Value') }}">
                </div>
                <div class="span2">
                    <button class="btn btn-danger" data-bind="click: $root.remove_stream"><i class="icon icon-trash" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
    </div>
    <h4>{{ _('Add Stream') }}</h4>
    <div class="well">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label" style="padding-top: 0"><input type="text" id="new_stream_id" class="input-block-level" placeholder="{{ _('Stream ID') }}"></label>
                <div class="controls">
                    <div class="span10">
                       <input type="text" id="new_stream_value" class="input-block-level" placeholder="{{ _('Stream Value') }}">
                    </div>
                    <div class="span2">
                        <button class="btn btn-primary" data-bind="click: add_stream"><i class="icon icon-plus-sign" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" data-bind="foreach: ffmpeg_sources">
            <div class="control-group">
                <label class="control-label" style="padding-top: 0"><input type="text" class="input-block-level" placeholder="{{ _('Stream ID') }}" data-bind="value: name"></label>
                <div class="controls">
                    <div class="span10">
                       <input type="text" class="input-block-level" placeholder="{{ _('Stream Value') }}" data-bind="value: url" readonly="readonly">
                    </div>
                    <div class="span2">
                        <button class="btn btn-primary" data-bind="click: $root.add_ffmpeg_device"><i class="icon icon-plus-sign" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
